{
  "name": "isekai-core",
  "version": "0.1.0-alpha.1",
  "private": true,
  "type": "module",
  "description": "Open source DeviantArt automation suite",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:frontend": "pnpm --filter isekai-frontend dev",
    "dev:backend": "pnpm --filter isekai-backend dev",
    "dev:publisher": "pnpm --filter isekai-publisher dev",
    "dev:services": "pnpm --parallel --filter isekai-backend --filter isekai-publisher dev",
    "build": "pnpm -r run build",
    "build:frontend": "pnpm --filter isekai-frontend build",
    "build:backend": "pnpm --filter isekai-backend build",
    "build:publisher": "pnpm --filter isekai-publisher build",
    "build:services": "pnpm --parallel --filter isekai-backend --filter isekai-publisher build",
    "start:backend": "pnpm --filter isekai-backend start",
    "start:publisher": "pnpm --filter isekai-publisher start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "clean": "pnpm -r run clean",
    "db:generate": "pnpm --filter @isekai/shared db:generate",
    "db:migrate": "cd packages/shared && pnpm prisma migrate dev",
    "db:studio": "cd packages/shared && pnpm prisma studio"
  },
  "keywords": [
    "deviantart",
    "scheduler",
    "social-media"
  ],
  "author": "isekai-sh",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@smithy/node-http-handler": "^4.4.5",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.39.1",
    "globals": "^15.15.0",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.48.1"
  }
}
